<table class="table table-striped">
  <thead>
    <tr>
      <th>Operator</th>
      <th>Destination</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Amount</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_history.order_items.each do |order_item| %>
      <tr id="order_item_<%= order_item.id %>">
        <td><%= order_item.ticket.operator.name %></td>
        <td><%= order_item.ticket.destination %></td>
        <td><%= order_item.ticket.departure %></td>
        <td><%= order_item.ticket.arrival %></td>
        <td><%= order_item.amount %></td>
        <td><%= order_item.total %></td>
        <% if !order_item.ticket.past_departure_date? %>
          <td><%= link_to 'Cancel', cancel_ticket_path(order_item_id: order_item.id), method: :delete, remote: true %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>
