
  <h1>Tickets</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Operator</th>
        <th>Destination</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th>Amount</th>
        <th>Price</th>
        <% if user_signed_in? %>
        	<th></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.operator_name %></td>
          <td><%= ticket.destination %></td>
          <td><%= ticket.departure %></td>
          <td><%= ticket.arrival %></td>
          <td><%= ticket.quantity %></td>
          <td><%= ticket.price %></td>
          <% if user_signed_in? %>
            <td><%= link_to 'Buy', ticket %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if user_signed_in? && current_user.is_operator? %>
    <%= link_to 'New ticket', new_ticket_path %>
  <% end %>
